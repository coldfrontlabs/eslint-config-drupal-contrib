{
  "name": "eslint-config-drupal-contrib",
  "version": "1.0.1",
  "description": "An ESLint configuration to match the Drupal standard for contrib modules and themes.",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint --ext .js .",
    "lint:fix": "npx eslint --ext .js . --fix",
    "commit": "npx git cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coldfrontlabs/eslint-config-drupal-contrib.git"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "config",
    "drupal"
  ],
  "author": "Coldfront Labs Inc.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/coldfrontlabs/eslint-config-drupal-contrib/issues"
  },
  "homepage": "https://github.com/coldfrontlabs/eslint-config-drupal-contrib#readme",
  "dependencies": {
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0"
  },
  "peerDependencies": {
    "eslint": ">=6.0.0",
    "prettier": ">=1.18.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "commitizen": "^4.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.0.1",
    "husky": "^3.0.1",
    "prettier": "^1.18.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "echo committing as $(git config user.name) && npm run lint"
    }
  }
}

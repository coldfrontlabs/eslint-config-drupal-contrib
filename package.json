{
  "name": "eslint-config-drupal-contrib",
  "version": "1.0.0",
  "description": "An ESLint configuration to match the Drupal standard for contrib modules and themes.",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint --ext .js .",
    "lint:fix": "npx eslint --ext .js . --fix",
    "commit": "npx git cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coldfrontlabs/eslint-config-drupal-contrib.git"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "config",
    "drupal"
  ],
  "author": "Coldfront Labs Inc.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/coldfrontlabs/eslint-config-drupal-contrib/issues"
  },
  "homepage": "https://github.com/coldfrontlabs/eslint-config-drupal-contrib#readme",
  "dependencies": {
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4"
  },
  "peerDependencies": {
    "eslint": ">=5.14.0",
    "prettier": ">=1.13.0"
  },
  "devDependencies": {
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "prettier": "^1.16.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  }
}
